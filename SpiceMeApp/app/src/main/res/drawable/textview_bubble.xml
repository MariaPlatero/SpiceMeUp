<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Bottom 2dp Shadow -->
        <!--<item android:bottom="-20px" android:right="-20px">-->
        <item android:bottom="-10px" android:right="-10px" android:left="10px">
                <shape  android:shape="rectangle">
                        <solid android:color="#E14164" />
                        <corners android:radius="155px" />
                        <!--<padding android:left="10dp" android:top="5dp" android:right="10dp" android:bottom="5dp" />-->
                </shape>
        </item>

        <!-- White Top color -->
        <item>
                <shape  android:shape="rectangle">
                        <solid android:color="#FFADBF" />
                        <corners android:radius="155px"/>
                        <padding android:left="10dp" android:top="5dp" android:right="10dp" android:bottom="5dp" />
                </shape>

        </item>
</layer-list>
